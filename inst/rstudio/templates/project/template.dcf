Binding: acvt_template
Title: Academic CV Project
Icon: acvt_icon.png
OpenFiles: cv.qmd

Parameter: firstname
Widget: TextInput
Label: First Name
Default: "Arthur"

Parameter: lastname
Widget: TextInput
Label: Last Name
